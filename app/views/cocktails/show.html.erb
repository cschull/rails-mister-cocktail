<div class="cocktail-page">
  <img class="card-img-top" src="<%= @cocktail.img_url %>" alt="<%= @cocktail.name %>">
  <h1><%= @cocktail.name %></h1>
  <div class="ingredients">
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>
      </li>
    <% end %>
  </div>
  <%= link_to new_cocktail_dose_path(@cocktail) do %>
    <i class="fas fa-flask"></i>
  <% end %>
  <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?"} do %>
    <i class="far fa-trash-alt"></i>
  <% end %>
  <div class="go-home">
    <%= link_to "Home", cocktails_path %>
  </div>
</div>

